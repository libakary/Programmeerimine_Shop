@model TARge21Shop.Models.Car.CarDetailsViewModel

<h1>Details</h1>

<div>
	<h4>Cars</h4>
	<hr/>
	<dl class="row">
		<div class="form-group row">
			<label asp-for="Id" class="col-sm-2 col-form-label"></label>
			@Html.DisplayFor(model => model.Id)
		</div>
		<div class="form-group row">
			<label asp-for="Name" class="col-sm-2 col-form-label"></label>
			@Html.DisplayFor(model => model.Name)
		</div>
		<div class="form-group row">
			<label asp-for="BodyStyle" class="col-sm-2 col-form-label"></label>
			@Html.DisplayFor(model => model.BodyStyle)
		</div>
		<div class="form-group row">
			<label asp-for="Make" class="col-sm-2 col-form-label"></label>
			@Html.DisplayFor(model => model.Make)
		</div>
		<div class="form-group row">
			<label asp-for="Model" class="col-sm-2 col-form-label"></label>
			@Html.DisplayFor(model => model.Model)
		</div>
		<div class="form-group row">
			<label asp-for="EnginePower" class="col-sm-2 col-form-label"></label>
			@Html.DisplayFor(model => model.EnginePower)
		</div>
		<div class="form-group row">
			<label asp-for="MaxPassengers" class="col-sm-2 col-form-label"></label>
			@Html.DisplayFor(model => model.MaxPassengers)
		</div>
		<div class="form-group row">
			<label asp-for="WeightCapacity" class="col-sm-2 col-form-label"></label>
			@Html.DisplayFor(model => model.WeightCapacity)
		</div>
		<div class="form-group row">
			<label asp-for="BuiltDate" class="col-sm-2 col-form-label"></label>
			@Html.DisplayFor(model => model.BuiltDate)
		</div>
		<div class="form-group row">
			<label asp-for="MaintenanceCount" class="col-sm-2 col-form-label"></label>
			@Html.DisplayFor(model => model.MaintenanceCount)
		</div>
		<div class="form-group row">
			<label asp-for="LastMaintenance" class="col-sm-2 col-form-label"></label>
			@Html.DisplayFor(model => model.LastMaintenance)
		</div>
		<div class="form-group row">
			<label asp-for="CreatedAt" class="col-sm-2 col-form-label"></label>
			@Html.DisplayFor(model => model.CreatedAt)
		</div>
		<div class="form-group row">
			<label asp-for="ModifiedAt" class="col-sm-2 col-form-label"></label>
			@Html.DisplayFor(model => model.ModifiedAt)
		</div>

		@foreach (var images in Model.Image)
		{
			<partial name="_Images" model="images"/>
		}

		<hr/>
	</dl>

	<a asp-action="index" asp-controller="cars" class="btn btn-success">Back</a>
</div>