@model IEnumerable<TARge21Shop.Models.Car.CarIndexViewModel>

	@{
		int rowNumber = 1;

	}

<div class="h1">
	Products
</div>

<div>
	<a asp-action="create" asp-controller="cars" type="submit" class="btn btn-primary">Create</a>
</div>

<form method="post">
	<table class="table table-hover">
		<thead>
			<tr>
				<th scope="col">Nr</th>
				<th scope="col">Name</th>
				<th scope="col">Body Style</th>
				<th scope="col">Make</th>
				<th scope="col">Model</th>
				<th scope="col">Engine Power</th>
			</tr>
		</thead>

		<tbody>
			@foreach (var car in Model)
			{
				<tr>
					<td>@rowNumber</td>
					<td>@car.Name</td>
					<td>@car.BodyStyle</td>
					<td>@car.Make</td>
					<td>@car.Model</td>
					<td>@car.EnginePower</td>
					<td>
						<a asp-action="details" asp-controller="cars" asp-route-id="@car.Id" class="btn btn-info">Details</a>
						<a asp-action="update" asp-controller="cars" asp-route-id="@car.Id" class="btn btn-primary">Update</a>
						<a asp-action="delete" asp-controller="cars" asp-route-id="@car.Id" class="btn btn-danger">Delete</a>
					</td>
				</tr>
				rowNumber += 1;
			}
		</tbody>

	</table>
</form>