@model TARge21Shop.Models.OpenWeather.CityResultViewModel

<h1>City</h1>

<div class="container">
	<h2>Forecast for the selected city</h2>
	<hr />
	<dl class="row">
		<div class="form-group row">
			<class="col-sm-2 col-form-label"></>
			<label asp-for="City" class="col-sm-2 col-form-label">City:</label>
			@Html.DisplayFor(model => model.City)
		</div>

		<div class="form-group row">
			<label asp-for="Temp" class="col-sm-2 col-form-label">Temperature:</label>
			@Html.DisplayFor(model => model.Temp) &#8451;
		</div>

		<div class="form-group row">
			<label asp-for="Feels_like" class="col-sm-2 col-form-label">Temp Feels Like:</label>
			@Html.DisplayFor(model => model.Feels_like) &#8451;
		</div>

		<div class="form-group row">
			<label asp-for="Humidity" class="col-sm-2 col-form-label">Humidity:</label>
			@Html.DisplayFor(model => model.Humidity) %
		</div>

		<div class="form-group row">
			<label asp-for="Pressure" class="col-sm-2 col-form-label">Pressure:</label>
			@Html.DisplayFor(model => model.Pressure) Hpa
		</div>

		<div class="form-group row">
			<label asp-for="Speed" class="col-sm-2 col-form-label">Wind Speed:</label>
			@Html.DisplayFor(model => model.Speed) km/h
		</div>

		<div class="form-group row">
			<label asp-for="Description" class="col-sm-2 col-form-label">Weather Condition:</label>
			@Html.DisplayFor(model => model.Description)
		</div>
	</dl>
</div>