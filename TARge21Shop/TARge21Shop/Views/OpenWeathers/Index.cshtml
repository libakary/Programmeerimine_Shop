@model TARge21Shop.Models.OpenWeather.SearchCityViewModel

<h1>Search a City</h1>

<div class="container">
	<form method="post">
		<div class="form-group col-md-offset-5 col-md-5">
			<h2>Search the forecast in a city</h2>
			<label asp-for="CityName" style="font-family:Arial"></label>
			<input asp-for="CityName" class="form-control" />
			<span asp-validation-for="CityName" class="text-danger"></span>
		</div>
		<br />
		<div class="container">
			<div class="form-group col-md-offset-3 col-md-5">
				<button asp-controller="OpenWeathers" asp-action="SearchCity" class="btn btn-primary">Push Button</button>
			</div>
		</div>
	</form>
</div>
